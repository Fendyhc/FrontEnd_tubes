<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Nama Peserta"
        android:id="@+id/RC_EO_Daftar_Name" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:id="@+id/RC_EO_Daftar_Email" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="NPM"
            android:id="@+id/RC_EO_Daftar_NPM" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@color/button"
            android:text="CONFIRM" />

    </LinearLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Nomor Rekening"
        android:id="@+id/RC_EO_Daftar_Fakultas" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Atas Nama"
        android:id="@+id/RC_EO_Daftar_Prodi" />


</LinearLayout>